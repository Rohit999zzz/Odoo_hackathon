<%- include('../partials/header') %>

<div class="product-detail-container">
    <div class="product-detail">
        <div class="product-images">
            <div class="main-image">
                <img id="main-product-image" src="<%= product.images[0] %>" alt="<%= product.title %>">
            </div>
            <% if (product.images.length > 1) { %>
                <div class="image-thumbnails">
                    <% product.images.forEach((image, index) => { %>
                        <div class="thumbnail <%= index === 0 ? 'active' : '' %>" onclick="changeMainImage('<%= image %>', this)">
                            <img src="<%= image %>" alt="<%= product.title %> - Image <%= index + 1 %>">
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <div class="product-info-section">
            <div class="product-header">
                <h1><%= product.title %></h1>
                <div class="product-meta">
                    <span class="price">$<%= product.price.toFixed(2) %></span>
                    <span class="condition condition-<%= product.condition.toLowerCase() %>">
                        <%= product.condition %>
                    </span>
                    <span class="category">
                        <i class="fas fa-tag"></i>
                        <%= product.category %>
                    </span>
                </div>
            </div>

            <div class="product-description">
                <h3>Description</h3>
                <p><%= product.description %></p>
            </div>

            <div class="product-stats">
                <div class="stat">
                    <i class="fas fa-eye"></i>
                    <span><%= product.views %> views</span>
                </div>
                <div class="stat">
                    <i class="fas fa-calendar"></i>
                    <span>Listed <%= new Date(product.createdAt).toLocaleDateString() %></span>
                </div>
            </div>

            <div class="seller-info">
                <h3>Seller Information</h3>
                <div class="seller-card">
                    <div class="seller-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="seller-details">
                        <h4><%= product.seller.username %></h4>
                        <p><%= product.seller.email %></p>
                        <% if (product.seller.phone) { %>
                            <p><i class="fas fa-phone"></i> <%= product.seller.phone %></p>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="product-actions">
                <% if (isOwner) { %>
                    <a href="/products/<%= product._id %>/edit" class="btn btn-secondary">
                        <i class="fas fa-edit"></i>
                        Edit Listing
                    </a>
                    <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="delete-form" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </form>
                <% } else { %>
                    <% if (product.status === 'available') { %>
                        <% if (isInCart) { %>
                            <span class="btn btn-success disabled">
                                <i class="fas fa-check"></i>
                                In Cart
                            </span>
                            <a href="/users/cart" class="btn btn-primary">
                                <i class="fas fa-shopping-cart"></i>
                                View Cart
                            </a>
                        <% } else { %>
                            <form action="/products/<%= product._id %>/cart" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-cart-plus"></i>
                                    Add to Cart
                                </button>
                            </form>
                        <% } %>
                    <% } else { %>
                        <span class="btn btn-danger disabled">
                            <i class="fas fa-times"></i>
                            <%= product.status === 'sold' ? 'Sold' : 'Not Available' %>
                        </span>
                    <% } %>
                <% } %>
                
                <a href="/products" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Products
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
