<%- include('../partials/header') %>

<div class="listings-container">
    <div class="listings-header">
        <h1>
            <i class="fas fa-list"></i>
            My Listings
        </h1>
        <p>Manage your product listings</p>
        <a href="/products/new" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Add New Product
        </a>
    </div>

    <div class="listings-grid">
        <% if (products.length === 0) { %>
            <div class="no-listings">
                <i class="fas fa-box-open"></i>
                <h3>No listings yet</h3>
                <p>Start selling by adding your first product</p>
                <a href="/products/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Add Your First Product
                </a>
            </div>
        <% } else { %>
            <% products.forEach(product => { %>
                <div class="listing-card">
                    <div class="listing-image">
                        <img src="<%= product.images[0] %>" alt="<%= product.title %>">
                        <div class="listing-status status-<%= product.status %>">
                            <%= product.status.charAt(0).toUpperCase() + product.status.slice(1) %>
                        </div>
                    </div>
                    <div class="listing-info">
                        <h3 class="listing-title">
                            <a href="/products/<%= product._id %>"><%= product.title %></a>
                        </h3>
                        <p class="listing-description"><%= product.description.substring(0, 100) %>...</p>
                        <div class="listing-meta">
                            <span class="listing-price">$<%= product.price.toFixed(2) %></span>
                            <span class="listing-category"><%= product.category %></span>
                        </div>
                        <div class="listing-stats">
                            <span><i class="fas fa-eye"></i> <%= product.views %> views</span>
                            <span><i class="fas fa-calendar"></i> <%= new Date(product.createdAt).toLocaleDateString() %></span>
                        </div>
                    </div>
                    <div class="listing-actions">
                        <a href="/products/<%= product._id %>" class="btn btn-sm btn-secondary">
                            <i class="fas fa-eye"></i>
                            View
                        </a>
                        <% if (product.status === 'available') { %>
                            <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i>
                                Edit
                            </a>
                        <% } %>
                        <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="delete-form" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
                                <i class="fas fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
